{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*/index", "components/*"],
      "@assets/*": ["assets/*/index", "assets/*"],
      "@domain/*": ["domain/*/index", "domain/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
